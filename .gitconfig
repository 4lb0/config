[user]
  name = Rodrigo “Albo” Arce
  email = albo@pragmore.com


[core]
  editor = nvim

[color]
  ui = auto

[alias]
  st = status
  # Git add and git commit shortcut, usage: git c "Message"
  c = "!git add . && git commit -m \"$1\" #"
  br = branch
  co = checkout
  # Pretty log
  l = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  # Undo last commit
  undo = reset --soft HEAD~
  # Always pull with rebase
  pr = pull --rebase
  # Git push all shortcut, useful when multiple remotes
  pa = !git remote | xargs -L1 git push --all
  dt = difftool

  # nube.pragmore.com cloud shortcuts
  deploy = push -q prod
  deploy-f = !NUBE_TAG_FORCE="force_deploy_$(date "+%Y%m%d_%H%g%S")" && git tag $NUBE_TAG_FORCE && git push -q prod $NUBE_TAG_FORCE

[credential]
  helper = cache --timeout=3600000

[diff]
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[pager]
  difftool = true

[push]
  default = current

[init]
  # Useful for init local repositories for github
  defaultBranch = main

[pull]
	rebase = true
